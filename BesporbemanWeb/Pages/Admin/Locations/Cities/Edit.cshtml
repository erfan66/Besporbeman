@page
@model BesporbemanWeb.Pages.Admin.Locations.Cities.EditModel

<form method="post">
	<input hidden asp-for="City.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Update City</h2>
            <hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="City.Name"></label>
			<input asp-for="City.Name" class="form-control" />
			<span asp-validation-for="City.Name" class="text-danger"></span>
		</div>
		<div class="form-floating">
            <select asp-for="City.CountryId" asp-items="Model.CountriesList" class="form-select">
                <option disabled selected>-Select Country</option>
            </select>
            <label asp-for="City.CountryId"></label>
            <span asp-validation-for="City.CountryId" class="text-danger"></span>
        </div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
		<a asp-page="Index" class="btn btn-secondary"  style="width:150px;"> Back</a>
	</div>
	
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}