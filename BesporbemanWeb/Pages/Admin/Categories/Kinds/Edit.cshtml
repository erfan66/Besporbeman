@page
@model BesporbemanWeb.Pages.Admin.Categories.Kinds.EditModel

<form method="post" enctype="multipart/form-data">
    <input asp-for="Kind.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-6">
                <h2 class="text-primary pl-3">Update Kind</h2>
                <hr />
                <div class="mb-3">
                    <label asp-for="Kind.Type"></label>
                    <input asp-for="Kind.Type" class="form-control" />
                    <span asp-validation-for="Kind.Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Kind.Image"></label>
                    <input type="file" name="files" class="form-control" />
                    <span asp-validation-for="Kind.Image" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
                <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back</a>
            </div>
            <div class="col-6">
                <img src="@Model.Kind.Image" width:100%; style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>

    </div>

</form>

@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}