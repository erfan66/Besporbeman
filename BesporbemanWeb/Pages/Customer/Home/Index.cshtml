@page
@model BesporbemanWeb.Pages.Customer.Home.IndexModel

<div class="row container pb-3 backgroundWhite">
	@foreach(var kind in Model.KindList){
	<h2 class="text-success pl-1"><b>@kind.Type</b></h2>
	<div class="col-12">
		<div class="row my-3">
			@foreach(var advertise in Model.AdvertiseList.Where(x=> x.KindId==kind.Id)){
			<div class="col-lg-4 col-md-6 pb-4 filter">
				<div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
					<div class="card-body pb-1 row">
						<div class="col-6 border-0">
							<span class="badge p-2 mb-2 border w-100 bg-dark ">@advertise.DateOfAdvertise</span>
						</div>
						<hr>
						<div class="col-8 h5">@advertise.Title</div>
						<div class="col-4 text-end"><span class="text-info h4">@advertise.Count</span></div>
					</div>
					<div class="card-body p-1 px-3 row">
						<div class="col-6">
							<span class="badge p-2 border w-100 text-dark bg-warning ">@advertise.Kind.Type</span>
						</div>
						<div class="col-6 border-0">
							<span class="badge p-2 border w-100 bg-info ">@advertise.Material.Title</span>
						</div>
						<div class="col-6 border-0">
							<span class="badge p-2 border w-100 bg-danger ">@advertise.Weight Kg</span>
						</div>
						<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
							<p> @Html.Raw(advertise.Description)</p>
						</div>
						<div class="col-12 p-1">
							<a class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
						</div>
					</div>
				</div>
			</div>
			}
		</div>
	</div>
	}
</div>